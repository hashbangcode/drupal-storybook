{% stories exampleComponent with { title: 'Components/Example Component' } %}

  {% story default with {
    name: '1. Default',
    args: {
      example_property: 'Example property',
      example_slot: 'Example slot',
    }
  } %}

    {% embed 'my_theme:example_component' %}
      {% block example_slot %}
        {{ example_slot|raw }}
      {% endblock %}
    {% endembed %}

  {% endstory %}

  {% story wrapped with {
    name: '2. Wrapped',
    args: {
      example_property: 'Example property',
      example_slot: '  <p>Lorem ipsum odor amet, <a href="#">consectetuer</a> adipiscing elit. Rhoncus nam mi in torquent senectus dictumst
    erat. Iaculis potenti tincidunt sapien tincidunt elementum at hac rhoncus gravida.</p>',
    }
  } %}

    <div style="border:1px solid red; width: 365px; height: 500px;">
    {% embed 'my_theme:example_component' %}
      {% block example_slot %}
        {{ example_slot|raw }}
      {% endblock %}
    {% endembed %}
    </div>

  {% endstory %}

{% endstories %}
